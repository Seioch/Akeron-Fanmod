<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--=============================== Pillars ===================================-->

<ThingDef ParentName="BuildingBase">
    <defName>AKN_PillarA</defName>
    <label>Decorated Pillar A</label>
    <description>A sturdy pillar that has been decorated with a beautiful design, like something you would find in a grand hall.</description>
    <designationCategory>Structure</designationCategory>
    <graphicData>
      <drawSize>(1.25,1.25)</drawSize>
      <drawOffset>(0,0,0.2)</drawOffset>
      <texPath>Things/Building/Pillars/AKN_PillarA</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.3, 0.5, 0.3)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>35</costStuffCount>	
    <building>
      <isInert>true</isInert>
      <ai_chillDestination>false</ai_chillDestination>
    </building>	
	<uiIconScale>0.7</uiIconScale>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.30</fillPercent>
    <pathCost>0</pathCost>
    <statBases>
      <MaxHitPoints>350</MaxHitPoints>
      <WorkToBuild>1620</WorkToBuild>
      <Mass>10</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>15</Beauty>
    </statBases>
	<researchPrerequisites>
	  <li>AKN_AdorableDoodles</li>
	</researchPrerequisites>	
    <holdsRoof>true</holdsRoof>
    <canOverlapZones>false</canOverlapZones>
    <rotatable>false</rotatable>
    <fertility>0</fertility>
    <specialDisplayRadius>6.9</specialDisplayRadius> <!-- must be kept in sync with roof hold-up radius -->

  </ThingDef>
  
